<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ht.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:ht"
    Shell.FlyoutBehavior="Disabled"
    Title="ht"
    xmlns:views="clr-namespace:ht.Views">


    <ShellContent Route="LoginPage"
                  ContentTemplate="{DataTemplate views:LoginPage}"/>
    <ShellContent Route="RegisterPage"
                  ContentTemplate="{DataTemplate views:RegisterPage}"
                  />
    <TabBar Route="MainPage">
        <ShellContent Title="Workout" ContentTemplate="{DataTemplate views:WorkoutPage}"/>
        <ShellContent Title="Nutrition" ContentTemplate="{DataTemplate views:NutritionPage}" />
        <ShellContent Title="Stats" ContentTemplate="{DataTemplate views:StatsPage}"/>
    </TabBar>
</Shell>
