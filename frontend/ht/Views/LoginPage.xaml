<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ht.Views.LoginPage"
             Title="Login"
             xmlns:vm="clr-namespace:ht.ViewModels">
    <ContentPage.BindingContext>
        <vm:LoginViewModel/>
    </ContentPage.BindingContext>
    <VerticalStackLayout Padding="20" Spacing="10">
        <Label Text="Login" FontSize="24" FontAttributes="Bold" HorizontalOptions="Center" Margin="0,20,0,20"/>

        <Label Text="Username"/>
        <Entry Placeholder="Enter username" Text="{Binding Username}"/>

        <Label Text="Password"/>
        <Entry IsPassword="True" Placeholder="Enter password" Text="{Binding Password}"/>

        <Label Text="{Binding ErrorMessage}" TextColor="Red" IsVisible="{Binding ErrorMessage, Converter={StaticResource IsNotNullOrEmptyConverter}}"/>

        <Button Text="Login" Command="{Binding LoginCommand}" BackgroundColor="#6200EE" TextColor="White" Margin="0,10,0,0"/>
        <Button Text="Register" Command="{Binding GoToRegisterCommand}" BackgroundColor="#03DAC6" TextColor="Black"/>
    </VerticalStackLayout>
</ContentPage>